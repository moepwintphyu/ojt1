<%= form_for(@library) do |f| %>
  <% if @library.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@library.errors.count, "error") %> prohibited this library from being saved:</h2>

      <ul>
      <% @library.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Title %><br />
    <%= f.text_field :Title %>
  </div>
  <div class="field">
    <%= f.label :Tag %><br />
    <%= f.select :Tag, options_for_select(%w[ruby ios webdesign android]) %>
  </div>
  <div class="field">
    <%= f.label :Content %><br />
    <%= f.text_area(:Content, size: '50x10') %>
  </div>
  <div class="field">
    <%= f.label :Image %><br />
    <%= f.file_field :Image %>
  </div>
  <div class="field">
    <%= f.label :Reference %><br />
    <%= f.text_field :Reference %>
  </div>
  <div class="field">
    <%= f.label :File %><br />
    <%= f.file_field :File %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
  <%= link_to 'Cancel', libraries_path %>
<% end %>
